<html lang ="utf-8">
<head>
<title>Index</title>
<meta charset = "utf-8">
<meta name="viewport" content"width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">


<meta http-equiv="X-UA-Compatible" content="ie=edge">
</head>
<body>
<div class = "container">
  <img src="ant_main.png" class="mx-auto d-block"/>
<h1 class = "mb-4"> Blog Articles </h1>
<a href = "/articles/new" class="btn btn-success"> New Article </a>
<% articles.forEach(article => { %>

  <div class = "card mt-4">
    <div class ="card-body">
      <span class='text-primary'> #  <%=article.keyword_kor %></span>
      <span class='text-info'>  <%=article.keyword%></span>
      <h1 class = "card-title"> <%= article.title_kor %> </h1>
      <div class = "card-subtitle text-muted mb-2">
        <%= article.upload_day.toLocaleDateString() %>
      </div>
      <div class ="card-text mb-2">   <%= article.summary_kor%>   </div>
      <div class ="card-text mb-2">  <span class= "text-muted"><%= article.summary%>  </span></div>
      <a href="articles/<%= article.id%>" class="btn btn-primary">자세히보기</a>
      <a href= article.href class="btn btn-success">원문보기</a>

    </div>
    </div>
<% }) %>
</div>
</body>
</html>
